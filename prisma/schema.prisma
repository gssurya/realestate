// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Lead {
  id        String   @id @default(cuid())
  name      String   @default("New Lead")
  email     String?
  phone     String?
  platform  String   @default("Web")
  status    String   @default("NEW") // STOP AI, FOLLOW UP, CLOSED
  interest  String?
  summary   String?
  score     Int      @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  messages  Message[]
}

model Message {
  id        String   @id @default(cuid())
  content   String
  sender    String   // user or ai
  leadId    String
  lead      Lead     @relation(fields: [leadId], references: [id])
  createdAt DateTime @default(now())
}

model Inventory {
  id        String   @id @default(cuid())
  title     String
  price     Float
  location  String
  status    String
  createdAt DateTime @default(now())
}
